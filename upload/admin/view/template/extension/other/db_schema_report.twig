<!DOCTYPE html>
<html dir="{{ direction }}" lang="{{ lang }}">
<head>
  <meta charset="UTF-8"/>
  <title>{{ title }}</title>
  <base href="{{ base }}"/>
  <link href="view/javascript/bootstrap/css/bootstrap.css" rel="stylesheet" media="all"/>
  <script type="text/javascript" src="view/javascript/jquery/jquery-3.7.1.min.js"></script>
  <script type="text/javascript" src="view/javascript/bootstrap/js/bootstrap.min.js"></script>
  <link href="view/javascript/font-awesome/css/font-awesome.min.css" type="text/css" rel="stylesheet"/>
  <link type="text/css" href="view/stylesheet/stylesheet.css" rel="stylesheet" media="all"/>
</head>
<body>
<div class="container">
  {% for title, results in tables %}
    {% set titles = title|split('.') %}
    <div style="page-break-after: always;">
      <h1>{{ title[0] }}</h1>
      <table class="table table-bordered">
        <thead>
          <tr>
            <td colspan="4">
              {% if titles[1] == 'parent' %}
                <span class="label label-default">{{ text_parent }}</span>
              {% elseif titles[1] == 'child' %}
                <span class="label label-default">{{ text_child }}</span>
              {% elseif titles[1] == 'index' %}
                <span class="label label-default">{{ text_index }}</span>
              {% elseif titles[1] == 'extension' %}
                <span class="label label-warning">{{ text_unassigned }}</span>
              {% endif %}</td>
          </tr>
        </thead>
        <tbody>
          {% for result in results %}
            <tr>
              <td style="width: 25%;">{{ result.name }}</td>
              <td style="width: 25%;">{{ result.previous_type }}</td>
              <td style="width: 25%;">{{ result.type }}</td>
              <td style="width: 25%;">{{ result.key }}</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  {% endfor %}
</div>
</body>
</html>
